{
  "manifest_version": 3,
  "name": "Browser Agent",
  "version": "1.0.0",
  "description": "AI-powered browser agent that executes user instructions to interact with web pages",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webNavigation",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser Agent",
    "default_icon": {
      "16": "icons/favicon.ico",
      "48": "icons/favicon.ico",
      "128": "icons/favicon.ico"
    }
  },
  "icons": {
    "16": "icons/favicon.ico",
    "48": "icons/favicon.ico",
    "128": "icons/favicon.ico"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["page-extractor.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
